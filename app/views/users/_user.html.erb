
<div class="container">
   <% @users.each do |user| %>
     <div class="row justify-content-md-center">
       <div class="col-8 mt-4">
         <div class="card text-center shadow mb-5 bg-white rounded">
           <div class="card-header font-italic">
             <%= link_to user.username, user_path(user) %>
           </div>
           <div class="card-body">
           <%= gravatar_for user, size: 200%>
             <h5 class="card-title"><%= pluralize(user.articles.count, "Article") %> </h5>
             <div class="btns-articles">
             <%= link_to "View profile", user_path(user), class: "btn btn-outline-success" %>
             <% if logged_in? && user == current_user %>
              <%= link_to "Edit profile", edit_user_path(user), class: "btn btn-outline-info" %>
              <%= button_to "Delete profile", user_path(user),  class: "btn btn-outline-danger", method: :delete, data: {turbo_confirm: "Are you sure?"} %>
             <% end %>
             </div>
           </div>
           <div class="card-footer text-muted">
             <small>Joined <%= time_ago_in_words(user.created_at)  %> </small>
           </div>
         </div>
       </div>
     </div>
   <% end %>
   </div>
 </div>