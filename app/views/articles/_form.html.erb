<%= form_with model: @article, local: true do |f| %>
    <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control", placeholder:"enter a title" %>
    </div>

    <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class:"form-control", rows:8 , placeholder:"enter a description" %>
    </div>

    <div class="form-group d-flex justify-content-center align-items-center">
       <%= link_to "Back", articles_path, class: "btn btn-secondary mt-4"%>
        <%= f.submit class: "btn btn-primary mt-4 center-block ms-2" %>
    </div>
<% end %>
