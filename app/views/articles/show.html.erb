
<div class="container">
     <div class="row justify-content-md-center">
       <div class="col-8 mt-4">
         <div class="card text-center shadow mb-5 bg-white rounded">
           <div class="card-header font-italic">
             by <%= link_to @article.user.username, user_path(@article.user) %>
             <%= link_to gravatar_for(@article.user, size:50), user_path(@article.user)%>
           </div>
           <div class="card-body">
             <h5 class="card-title"><%= @article.title %> </h3> 
             <p class="card-text"><%= truncate(@article.description, length: 100) %></p>
             <div class="btns-articles">
            <%= link_to "Back", articles_path, class: "btn btn-outline-secondary"%>
             <%= link_to "Edit", edit_article_path(@article), class: "btn btn-outline-info" %>
             <%= button_to "Delete", article_path(@article), class: "btn btn-outline-danger", method: :delete, data: {turbo_confirm: "Are you sure?"} %>
             </div>
           </div>
           <div class="card-footer text-muted">
             <small>Created <%= time_ago_in_words(@article.created_at) %> ago, 
             edited <%= time_ago_in_words(@article.updated_at) %> ago</small>
           </div>
         </div>
       </div>
     </div>
   </div>
 </div>
